<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wit.mobileapp.nhl_analyzer.HomeFragment">

    <ImageView
        android:id="@+id/BackImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/AdvancedStatsButton"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="false"
                android:background="@color/darkGrey"
                android:onClick="Open"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AdvancedStatsText"
                android:text="Advanced Stats"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:background="@color/TransBack"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/AdvancedStatsButton"
                app:layout_constraintTop_toTopOf="@+id/AdvancedStatsButton"/>

            <ImageButton
                android:id="@+id/AboutStatsButton"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="false"
                android:background="@color/darkGrey"
                android:onClick="Open"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AdvancedStatsButton" />

            <TextView
                android:id="@+id/AboutStatsText"
                android:text="About Stats"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:background="@color/TransBack"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/AboutStatsButton"
                app:layout_constraintTop_toTopOf="@+id/AboutStatsButton"/>

            <ImageButton
                android:id="@+id/GraphsChartsButton"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="false"
                android:background="@color/darkGrey"
                android:onClick="Open"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AboutStatsButton" />

            <TextView
                android:id="@+id/GraphsChartsText"
                android:text="Graphs/Charts"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:background="@color/TransBack"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/GraphsChartsButton"
                app:layout_constraintTop_toTopOf="@+id/GraphsChartsButton"/>

            <ImageButton
                android:id="@+id/SettingsButton"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="false"
                android:background="@color/darkGrey"
                android:onClick="Open"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AboutStatsButton" />

            <TextView
                android:id="@+id/SettingsText"
                android:text="Settings"
                android:layout_width="225dp"
                android:layout_height="50dp"
                android:background="@color/TransBack"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textColor="@android:color/background_light"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/SettingsButton"
                app:layout_constraintTop_toTopOf="@+id/SettingsButton"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>